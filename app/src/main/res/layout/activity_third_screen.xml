<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdScreen">


    <Button
        android:id="@+id/add_new_bill_galary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addNewBillGalary"
        android:text="Add New Bill From Galary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.831" />

    <Button
        android:id="@+id/add_new_bill_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addNewBillCamera"
        android:text="Add New Bill Using Camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/add_new_bill_galary"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/add_new_bill_galary"
        app:layout_constraintTop_toBottomOf="@+id/add_new_bill_galary"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="306dp"
        android:layout_height="253dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/add_new_bill_galary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>